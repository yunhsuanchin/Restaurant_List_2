<div class="container" style="max-width: 50%;">
  <h1 class="mb-5 text-center" style=" position: relative; top: -140px; color: white; text-shadow: 0 0 10px
    rgba(0, 0, 0, 0.5); font-size: 3rem; line-height: 1.5;">修改餐廳資訊 --<br> {{ restaurant.name }}</h1>

  <form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">

    <div class="form-group mb-4">
      <label for="exampleFormControlInput1">餐廳英文名稱：</label>
      <input type="text" class="form-control" placeholder="請輸入餐廳英文名稱" name="name_en" value="{{ restaurant.name_en }}">
    </div>
    <div class="form-group mb-4">
      <label for="exampleFormControlSelect1">餐點類型：</label>
      <select class="form-control" name="category">
        <option selected value="">-- 請選擇餐點類型 --</option>
        <option value="中東料理">中東料理</option>
        <option value="日本料理">日本料理</option>
        <option value="義式料理">義式料理</option>
        <option value="美式料理">美式料理</option>
        <option value="咖啡廳">咖啡廳</option>
        <option value="酒吧">酒吧</option>
      </select>
    </div>
    <div class="form-group mb-4">
      <label for="exampleFormControlInput1">餐廳圖片網址：</label>
      <input type="url" class="form-control" placeholder="請貼上餐廳圖片網址" name="image" value="{{ restaurant.image }}">
    </div>
    <div class="form-group mb-4">
      <label for="exampleFormControlInput1">地址：</label>
      <input type="text" class="form-control" placeholder="請輸入餐廳地址" name="location" value="{{ restaurant.location }}">
    </div>
    <div class="form-group mb-4">
      <label for="exampleFormControlInput1">電話：</label>
      <input type="text" class="form-control" placeholder="請輸入餐廳電話" name="phone" value="{{ restaurant.phone }}">
    </div>
    <div class="form-group mb-4">
      <label for="exampleFormControlInput1">google地圖：</label>
      <input type="url" class="form-control" placeholder="請貼上google地圖網址" name="google_map"
        value="{{ restaurant.google_map }}">
    </div>
    <div class="form-group mb-4">
      <label for="exampleFormControlInput1">餐廳評分：<small>（0.0 ~ 5.0分）</small></label>
      <input type="number" class="form-control" placeholder="請輸入餐廳評分" min="1.0" max="5.0" step="0.1" name="rating"
        value="{{ restaurant.rating }}">
    </div>
    <div class="form-group">
      <label for="exampleFormControlTextarea1">餐廳描述：</label>
      <textarea class="form-control" rows="3" name="description">{{ restaurant.description }}</textarea>
    </div>
    <button type="submit" class="btn btn-dark">Save</button>
  </form>
</div>