<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/restaurants/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{ keyword }}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>

  {{!-- Dropdown box --}}
  <div class="text-right">
    <div class="dropdown mt-5">
      <button class="btn btn-warning dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
        aria-haspopup="true" aria-expanded="false">
        排序選項
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" href="./name-asc">依餐廳名稱 <i class="fas fa-arrow-down"></i></a>
        <a class="dropdown-item" href="./name-desc">依餐廳名稱 <i class="fas fa-arrow-up"></i></a>
        <a class="dropdown-item" href="./id-asc">依加入時間 <i class="fas fa-arrow-down"></i></a>
        <a class="dropdown-item" href="./id-desc">依加入時間 <i class="fas fa-arrow-up"></i></a>
        <a class="dropdown-item" href="./category">依餐廳類別 <i class="fas fa-arrow-down"></i></a>
        <a class="dropdown-item" href="./location">依地區 <i class="fas fa-arrow-down"></i></a>
      </div>
    </div>
  </div>

</div>


<!-- restaurant list -->
<div class="container mt-5">
  <div class="row row-cols-1 row-cols-md-3">

    {{#each restaurants}}
    <div class="col">
      <div class="card mb-3">
        <a href="./restaurants/{{ this._id }}" class="text-secondary">
          <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}">

          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{ this.name }}</h6>
        </a>
        <div class="restaurant-category mb-1">
          <i class="fas fa-utensils pr-2"></i> {{ this.category }}
        </div>
        <span class="badge badge-pill badge-danger font-weight-normal">
          {{ this.rating }}
          <i class="fas fa-star fa-xs"></i>
        </span>
        <div class="buttons text-right">
          <a href="/restaurants/{{ this._id }}/edit" class="badge badge-pill badge-warning font-weight-normal">
            Edit
            <i class="fas fa-pencil-alt"></i>
          </a>
          <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;"
            onsubmit="return confirm('確定要刪除『{{ this.name }}』嗎？')">
            <button class="btn btn-warning font-weight-normal" type="submit">
              Delete
              <i class="fas fa-trash-alt"></i>
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
</div>