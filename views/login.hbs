<div class="row">
  <div class="col-md-6 m-auto">
    <h1 class="mb-5 text-center"
      style="color: white; text-shadow: 0 0 10px rgba(0, 0, 0, 0.5); font-size: 3rem; margin-top: -100px;">
      Login</h1>
    <div class="card card-body">
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email" style="color: red;">* Email<small>（required）</small></label>
          <input type="email" class="form-control" id="email" name="email" placeholder="Please Enter Your Email">
        </div>
        <div class="form-group">
          <label for="password" style="color: red;">* Password<small>（required）</small></label>
          <input type="password" class="form-control" id="password" name="password"
            placeholder="Please Enter Your Password">
        </div>
        <button type="submit" class="btn btn-outline-info btn-block">Login</button>
        <a href="/auth/facebook" class="btn btn-outline-primary btn-block">Login via Facebook</a>
        <p class="mt-4">No Account? <a href="/users/register" class="ml-1">Register</a></p>
      </form>
    </div>
  </div>

</div>